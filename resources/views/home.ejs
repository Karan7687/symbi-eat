<section
  class="hero min-h-[calc(100vh-80px)] flex items-center bg-gradient-to-b from-[#F8F9FA] to-white"
>
  <div
    class="container mx-auto flex flex-col-reverse md:flex-row items-center justify-between px-6"
  >
    <!-- Text -->
    <div class="text-center md:text-left mt-8 md:mt-0 max-w-xl">
      <h6 class="text-lg text-[#457B9D] italic font-light">
        <em>Are you hungry?</em>
      </h6>
      <h1
        id="bounceText"
        class="text-4xl sm:text-5xl md:text-6xl font-bold mt-2 hidden-text text-[#1D3557]"
      >
        Don't wait!
      </h1>
      <p class="mt-4 text-gray-600 text-lg">
        Experience culinary excellence with our premium dishes crafted for your
        delight.
      </p>
      <button
        class="mt-6 bg-[#E8C547] text-[#1D3557] font-bold py-3 px-8 rounded-lg hover:bg-[#D4B33F] transition duration-300 shadow-md"
      >
        Order Now
      </button>
    </div>

    <!-- Image -->
    <div
      class="w-[550px] h-[550px] rounded-full overflow-hidden mr-10 shadow-xl border-8 border-[#F8F9FA]"
    >
      <img
        src="/img/hero.png"
        alt="SymbiChef cooking"
        class="w-full h-full object-cover scale-125"
      />
    </div>
  </div>
</section>

<!-- Menu Section -->
<section class="menu container mx-auto py-16 px-6">
  <h1 class="text-4xl font-bold mb-16 text-[#1D3557] text-center relative">
    Our Premium Menu
    <span class="block w-24 h-1 bg-[#E8C547] mx-auto mt-4"></span>
  </h1>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
  >
    <!-- Menu Item Start -->

    <%foodItems.forEach(function(foodItem){ %>
    <div class="w-60 menu-card bg-white rounded-xl shadow-md p-6 mx-auto">
      <img
        class="h-40 w-full mb-4 mx-auto rounded-lg object-cover"
        src="/img/<%= foodItem.image %>"
        alt="<%= foodItem.name %>"
        onerror="this.onerror=null; this.src='/img/default.jpg';"
      />

      <div class="text-center">
        <h2 class="mb-2 text-xl font-bold text-[#1D3557]">
          <%= foodItem.name %>
        </h2>
        <p class="text-gray-600 text-sm mb-3">
          A delicious assortment of vegetarian dishes
        </p>

        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg text-[#1D3557]"
            >â‚¹ <%=foodItem.price %></span
          >
          <button
            class="add-to-cart py-2 px-6 rounded-lg flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>

    <% })%>

    <!-- Menu Item End -->
  </div>
</section>
