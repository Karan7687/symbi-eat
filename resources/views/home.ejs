<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SymbiEat</title>
    <link rel="icon" href="/img/symbi.ico" type="image/x-icon" />

    <link rel="stylesheet" href="/css/app.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <!-- Navbar -->
    <nav class="bg-white shadow-md">
      <div
        class="container mx-auto flex flex-wrap items-center justify-between px-4 py-4"
      >
        <!-- Logo and Title -->
        <div class="flex items-center space-x-3">
          <img src="/img/symbi.ico" alt="logo" class="h-10 w-10" />
          <span class="text-xl font-semibold text-gray-800">SymbiEat</span>
        </div>

        <!-- Menu Links -->
        <div class="flex flex-wrap items-center space-x-4 mt-4 sm:mt-0">
          <a href="#" class="text-gray-700 font-medium nav-item">Menu</a>
          <a href="#" class="text-gray-700 font-medium nav-item">Offer</a>
          <a href="#" class="text-gray-700 font-medium nav-item">Register</a>
          <a href="#" class="text-gray-700 font-medium nav-item">Login</a>
          <a href="#">
            <img src="/img/cart.png" alt="Cart" class="h-8 w-8 nav-item" />
          </a>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero min-h-[calc(100vh-80px)] flex items-center">
      <div
        class="container mx-auto flex flex-col-reverse md:flex-row items-center justify-between px-4"
      >
        <!-- Text -->
        <div class="text-center md:text-left mt-8 md:mt-0 max-w-xl">
          <h6 class="text-lg"><em>Are you hungry?</em></h6>
          <h1
            id="bounceText"
            class="text-4xl sm:text-5xl md:text-6xl font-bold mt-2 hidden-text"
          >
            Don't wait!
          </h1>
        </div>

        <!-- Image -->
        <div class="w-full md:w-1/2 flex justify-center md:justify-end">
          <img
            src="/img/hero.png"
            alt="SymbiChef"
            class="w-full h-auto max-w-[700px] md:max-w-[800px] lg:max-w-[9000px] object-contain"
          />
        </div>
      </div>
    </section>

    <!-- JS -->
    <script src="/js/app.js"></script>
  </body>
</html>
